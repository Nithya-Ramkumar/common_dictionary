CONFIG_TEST=/home/nithya-ramkumar/Programming/LLM-Test-New/common_dictionary/config/domains/chemistry/test_config

# Config Files - Using absolute paths defined above

# =============================================================================
# CHEMISTRY DATA SOURCE API SETTINGS
# =============================================================================
# PubChem API Settings
PUBCHEM_API_BASE_URL=https://pubchem.ncbi.nlm.nih.gov/rest/pug
PUBCHEM_TIMEOUT=30
PUBCHEM_MAX_RETRIES=3
PUBCHEM_BATCH_SIZE=10  # Lower batch size for dev

# Reaxys API Settings (if applicable)
REAXYS_API_BASE_URL=https://www.reaxys.com/reaxys/api
REAXYS_API_KEY=your_reaxys_api_key
REAXYS_TIMEOUT=30
REAXYS_MAX_RETRIES=3

# ChEBI API Settings (if applicable)
CHEBI_API_BASE_URL=https://www.ebi.ac.uk/webservices/chebi/2.0/webservice
CHEBI_TIMEOUT=30
CHEBI_MAX_RETRIES=3

# =============================================================================
# RATE LIMITING & RETRY CONFIGURATION
# =============================================================================
MAX_REQUESTS_PER_MINUTE=30  # Reduced for development
RATE_LIMIT_WINDOW=1800  # Reduced window for testing
RETRY_ATTEMPTS=5  # More retries for development
RETRY_DELAY=5  # in seconds
MAX_CONCURRENT_DOWNLOADS=10  # More permissive for dev

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
DATA_ROOT_DIR=common_dictionary/data/development
RAW_DOCUMENTS_DIR=raw_documents
PROCESSED_DOCUMENTS_DIR=processed_documents
METRICS_DIR=metrics
LOGS_DIR=logs

# Chemistry-specific storage paths
CHEMISTRY_DATA_PATH=${DATA_ROOT_DIR}/outputs/chemistry
CHEMISTRY_RAW_DATA_PATH=${CHEMISTRY_DATA_PATH}/raw
CHEMISTRY_PROCESSED_DATA_PATH=${CHEMISTRY_DATA_PATH}/processed
CHEMISTRY_METRICS_PATH=${CHEMISTRY_DATA_PATH}/metrics

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FILE=/home/nithya-ramkumar/Programming/LLM-Test-New/common_dictionary/config/domains/chemistry/logs/chemistry_extraction_dev.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_ROTATION=1d
LOG_RETENTION=30d
ERROR_LOG_PATH=/home/nithya-ramkumar/Programming/LLM-Test-New/common_dictionary/config/domains/chemistry/logs/errors_dev.log

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chemistry_dictionary_dev
DB_USER=dev_user
DB_PASSWORD=dev_password
DB_POOL_SIZE=3
DB_MAX_OVERFLOW=5

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TYPE=memory
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_TTL=3600  # in seconds
CACHE_MAX_SIZE=500  # Reduced for development
CACHE_ENABLED=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
API_KEY_EXPIRY_DAYS=30
JWT_SECRET_KEY=dev_secret_key
JWT_ALGORITHM=HS256
TOKEN_EXPIRY_MINUTES=1440  # Longer expiry for development
HASH_ALGORITHM=bcrypt

# =============================================================================
# PROXY CONFIGURATION
# =============================================================================
USE_PROXY=false
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# =============================================================================
# ERROR HANDLING
# =============================================================================
DETAILED_ERRORS=true  # More detailed errors for development
ALERT_ON_ERROR=true
ALERT_EMAIL=dev@example.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# CHEMISTRY-SPECIFIC FEATURES
# =============================================================================
# Enable/disable specific chemistry data sources
ENABLE_PUBCHEM=true
ENABLE_REAXYS=false
ENABLE_CHEBI=false

# Chemistry data processing settings
CHEMISTRY_BATCH_PROCESSING=true
CHEMISTRY_VALIDATION_STRICT=false  # Less strict for development
CHEMISTRY_SYNONYM_CLUSTERING=true

# Unit conversion settings
DEFAULT_MASS_UNIT=g
DEFAULT_VOLUME_UNIT=mL
DEFAULT_TEMPERATURE_UNIT=K
DEFAULT_PRESSURE_UNIT=Pa 